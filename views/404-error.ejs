

    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }
        .container {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
        .error-code {
            font-size: 6rem;
            color: #333;
        }
        .error-message {
            font-size: 1.5rem;
            color: #777;
        }
    </style>
    <div class="container">
        <div class="error-code"></div>
        <div class="error-message"><%= error%></div>
        <p><%= message %></p>
        <a href="/">Go to Home</a>
    </div>
