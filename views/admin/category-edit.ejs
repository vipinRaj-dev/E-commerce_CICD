<div class="container-fluid p-0 min-vh-100" style="margin-top: 8%">
  <%- include('../partials/adminheader.ejs') %>


  <div class="container py-5 " style="width: 500px;">
    <div class="row d-flex justify-content-center align-items-center">
        <form class="p-3" method="post" action="/admin/category-edit" style="background-color: rgb(98, 110, 241); width: 450px; border-radius: 10px;">
          <h3 class="fw-normal mb-1  text-center" >Edit</h3>
          <% if (locals.msg) { %>
          <div class="alert alert-success">
            <strong><%= msg %> </strong>
          </div>
          <% } %>
          <div class="input-group">
            <label for="username"></label>
            <input type="hidden" id="id" name="id" value="<%= list._id %>" />
            <div class="error"></div>
          </div>   

          <div class="form-outline mb-1">
            <label class="form-label" for="categoryName">Category Name</label>
            <input
              type="text"
              required
              id="categoryname"
              name="categoryName"
              value="<%= list.categoryName %> "
              class="form-control form-control-lg"
            />
          </div>

          <div class="form-outline mb-1">
            <label class="form-label" for="description">Description</label>
            <input
              type="text"
              required
              id="description"
              name="description"
              value="<%= list.categoryDescription %>"
              class="form-control form-control-lg"
            />
          </div>

          <div class="form-outline mb-1">
            <label class="form-label" for="discount">discount</label>
            <input
              type="text"
              required
              id="discount"
              name="discount"
              value="<%= list.categoryDiscount %> "
              class="form-control form-control-lg"
            />
          </div>

          <div class="form-outline mb-1">
            <label class="form-label" for="avilability">Avilability</label>
            <input
              type="text"
              required
              id="isAvailable"
              name="isavailable"
              value="<%= list.isavilable %>"
              class="form-control form-control-lg"
            />
            <!-- <label class="form-label" for="password">Password</label> -->
            <!-- <label class="form-label" for="isAvailable">isAvailable</label><br>
                        <input type="radio" id="Yes" name="isAvailable" value="<%=list.isAvailable %>">
                        <label for="Yes">Yes</label><br>
                        <input type="radio" id="No" name="isAvailable" value="<%=list.isAvailable %>">
                        <label for="No">No</label><br> -->
          </div>
          <input
            type="hidden"
            required
            id="_id"
            name="_id"
            value="<%=list._id %>"
            class="form-control form-control-lg"
          />
          <div class="pt-1 mb-4 text-center">
            <button class="btn btn-dark btn-lg btn-block" type="submit">
              SAVE
            </button>
          </div>

          <!-- <% if(locals.message){ %>
                        <h6 class="alter alert-danger text-capitalize text-center rounded-3">
                            <%= message %>
                        </h6>
                        <% } %> -->
        </form>
      </div>
  </div>
</div>
<%- include('../partials/admin-footer.ejs')%>

