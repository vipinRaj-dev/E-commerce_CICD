<%- include('../layouts.ejs')%>


<div class="container-fluid p-0 min-vh-100" style="margin-top: 0%">
    <%- include('../partials/adminheader.ejs') %>

<div class=" container col-md-9  p-0 m-0">
    <div class="container p-0">
        <!-- SEARCH -->
        <div class="conatiner saleTop bg-white d-flex align-items-center mb-3">
            <div class="container summary d-flex align-items-center justify-content-between p-4 "
                id="product">
                <h6 class="p-3 ps-4 ">Coupons</h6>
                <input type="text" placeholder="what are you looking for?" class="text-center">
            </div>
        </div>
        <!-- OTHER PART -->
        <div class=" container p-0 m-0">
            <div class="container p-0 bg-white p_addingWrapper">
                <form action="/admin/coupons/couponsAdding" method="post" id="formCoupon">
                    <div class="container p-3 ps-5 pb-5">
                        <h6 class="py-3 fw-bold" style="font-size: 20px">New Coupons</h6>
                        <div class="pb-3">
                            <span class="text-success "><%= locals.suMessage?suMessage:" " %></span>
                        <span class="text-danger "><%= locals.message?message:" " %></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6 d-flex flex-column inputeWrapper">
                                <span class="mb-2 fw-bold"
                                    style="color: #8e8e8e; font-size: 13px;">Coupon Name*</span>
                                <span class="text-dark fw-bold"></span>
                                <input class="p-2" type="text" name="couponName" id="couponName" required>
                            </div>
                            <div class="col-md-6 d-flex flex-column inputeWrapper">
                                <span class="mb-2 fw-bold"
                                    style="color: #8e8e8e; font-size: 13px;">Amount*</span>
                                <span class="text-dark fw-bold"></span>
                                <input class="p-2" type="text" name="couponValue" id="couponValue" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 d-flex flex-column inputeWrapper">
                                <span class="mb-2 fw-bold"
                                    style="color: #8e8e8e; font-size: 13px;">Max Value*</span>
                                <span class="text-dark fw-bold"></span>
                                <input class="p-2" type="text" name="maxValue" id="maxValue" required>
                            </div>
                            <div class="col-md-4 d-flex flex-column inputeWrapper">
                                <span class="mb-2 fw-bold"
                                    style="color: #8e8e8e; font-size: 13px;">Min Value*</span>
                                <span class="text-dark fw-bold"></span>
                                <input class="p-2" type="text" name="minValue" id="minValue" required>
                            </div>
                            <div class="col-md-4 d-flex flex-column inputeWrapper">
                                <span class="mb-2 fw-bold"
                                    style="color: #8e8e8e; font-size: 13px;">Expiry Date*</span>
                                <span class="text-dark fw-bold"></span>
                                <input class="p-2" type="date" name="expiryDate" id="expiryDate"
                                    style="color: #8e8e8e;" required>
                            </div>
                        </div>
                    </div>
                    <div class="container ms-4 pb-4 pb-2">
                        <button class="btn btn-success addbutton mb-3" type="submit">
                            Submite
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

</div>